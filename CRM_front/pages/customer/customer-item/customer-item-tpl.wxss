.customer-container{
    flex-direction:column;
    display:flex;
    margin:20rpx 0 40rpx;
    background-color:#fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
}

.customer-author-date{
    margin: 10rpx 0 20rpx 10px;
    display:flex;
    flex-direction: row;
    align-items: center;
}

.customer-author-date image{
    width:60rpx;
    height:60rpx;
}
.customer-author-date text{
    margin-left: 20px;
}

.customer-image{
    width:100%;
    height:340rpx;
    margin-bottom: 15px;
}

.customer-date{
    font-size:26rpx;
    margin-bottom: 10px;
}
.customer-title{
    font-size:16px;
    font-weight: 600;
    color:#333;
    margin-bottom: 10px;
    margin-left: 10px;
}
.customer-content{
    color:#666;
    font-size:26rpx;
    margin-bottom:20rpx;
    margin-left: 20rpx;
    letter-spacing:2rpx;
    line-height: 40rpx;
}
.customer-like{
    display:flex;
    flex-direction: row;
    font-size:13px;
    line-height: 16px;
    margin-left: 10px;
    align-items: center;
}

.customer-like image{
    height:16px;
    width:16px;
    margin-right: 8px;
}

.customer-like text{
    margin-right: 20px;
    font-size: 26rpx;
}
