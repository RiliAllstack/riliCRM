<!--customer-plus.wxml-->
<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="customer-plus-container">
    <view class="customer-plus-author-date"></view>
    <view class="customer-plus-title-input">
      <text>公司名称：</text>
      <input type="text" name="company" />
    </view>
    <view class="customer-plus-title-input">
      <text>负 责 人：</text>
      <input type="text" name="charger" />
    </view>
    <view class="customer-plus-title-input">
      <text>产 值(万/年)：</text>
      <input type="text" name="scale" />
    </view>
    <view class="customer-plus-title-input">
      <text>位 置：</text>
      <input type="text" name="position" />
    </view>
    <view class="customer-plus-title-input">
      <text>跟进程度：</text>
      <input type="text" name="schedule" />
    </view>
    <view class="customer-plus-title-input">
      <text>业务人员：</text>
      <input type="text" name="followUper" />
    </view>
    <view class="customer-plus-title-input">
      <text>备 注：</text>
      <input type="text" name="remark" />
    </view>
    <button formType="submit" type="primary" style="width:98%;margin-top:130rpx">保存</button>
    <button formType="reset" type="warn" style="width:98%;margin-top:20rpx">清空</button>
  </view>
</form>