/* customer-plus.wxss */

.customer-plus-container {
  flex-direction: column;
  display: flex;
  margin: 20rpx 0 40rpx;
  background-color: #fff;
  padding-bottom: 5px;
}

.customer-plus-author-date {
  margin: 10rpx 0 20rpx 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.customer-plus-author-date image {
  width: 60rpx;
  height: 60rpx;
}

.customer-plus-author-date text {
  margin-left: 20px;
}

.customer-plus-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}

.customer-plus-date {
  font-size: 26rpx;
  margin-bottom: 10px;
}

.customer-plus-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.customer-plus-content {
  color: #666;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.customer-plus-like {
  display: flex;
  flex-direction: row;
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
  align-items: center;
}

.customer-plus-like image {
  height: 16px;
  width: 16px;
  margin-right: 8px;
}

.customer-plus-like text {
  margin-right: 20px;
  font-size: 26rpx;
}

.customer-plus-title-input {
  margin: 10rpx 0 20rpx 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #ededed;
  height: 80rpx;
}
.placeholder{
  padding-left: 20rpx;
}
.customer-plus-title-input text{
  font-size: 28rpx;
  font-weight: 300;
  margin-left: 10rpx;
  width: 25%;
  text-align: right;
}

.customer-plus-title-input input{
  border-left: 1px solid #ededed;
  width: 90%;
  font-size: 32rpx;
}
