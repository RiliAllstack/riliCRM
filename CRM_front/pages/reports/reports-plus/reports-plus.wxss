/* reports-plus.wxss */

.category-item {
  width: 100%;
  margin: 20rpx 0;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
  background-color: #fff;
  height: 200rpx;
}

.category-item-button {
  position: fixed;
  width: 100%;
  top: 80%;
}

.detail-item {
  display: flex;
  border-bottom: 1px solid #d9d9d9;
  height: 85rpx;
  align-items: center;
}

.detail-item label {
  font-size: 24rpx;
  margin-left: 10rpx;
  width: 600rpx;
}

.detail-item image {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  left: 680rpx;
}

.image-column {
  display: flex;
  flex-direction: column;
}

.image-list {
  margin-left: 40rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
}

.image-list image {
  width: 140rpx;
  height: 140rpx;
  margin-left: 20rpx;
  border-radius: 8px;
}

.img-delete image {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
  margin-top: -8rpx;
}

.detail-item text {
  font-size: 28rpx;
  font-weight: bolder;
  margin-left: 10rpx;
  width: 110rpx;
  text-align: right;
  padding-right: 10rpx;
  border-right: 1px solid #ededed;
}

.detail-item input {
  width: 80%;
  font-size: 32rpx;
}

.detail-item2 {
  display: flex;
  border-bottom: 1px solid #d9d9d9;
  height: 200rpx;
  align-items: center;
}

.detail-item2 text {
  font-size: 28rpx;
  font-weight: bolder;
  margin-left: 10rpx;
  width: 110rpx;
  text-align: right;
  padding-right: 10rpx;
  border-right: 1px solid #ededed;
}

.detail-item2 textarea {
  width: 80%;
  height: 200rpx;
  font-size: 32rpx;
}

.reports-detail-record-send {
  position: fixed;
  top: 1100rpx;
  width: 100%;
  height: 200rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
}

.reports-detail-record-send input {
  border: 1px solid #d9d9d9;
  border-radius: 6px;
  margin-left: 40rpx;
  margin-top: 12rpx;
  font-size: 30rpx;
  height: 60rpx;
  width: 500rpx;
}

.reports-detail-record-send image {
  width: 64rpx;
  height: 64rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.comment-btn1 {
  width: 160rpx;
  height: 64rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
  text-align: center;
  line-height: 70rpx;
}

.comment-btn2 {
  color: white;
  background-color: green;
  width: 160rpx;
  height: 64rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
  text-align: center;
  line-height: 70rpx;
}

.type image {
  width: 64rpx;
  height: 64rpx;
}

.img_upload image {
  width: 56rpx;
  height: 56rpx;
  margin-top: 17rpx;
  margin-left: 20rpx;
  padding-right: 30rpx;
  border-right: 1px solid #d9d9d9;
}

.comments {
  display: flex;
  flex-direction: column;
}

.commemts-item {
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #d9d9d9;
  margin-top: 10rpx;
}

.comments-item-avatar-date {
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
}

.comments-item-avatar-date image {
  border-radius: 15%;
  width: 60rpx;
  height: 60rpx;
  margin-left: 30rpx;
}

.comments-item-avatar-date text {
  margin-left: 2%;
}

.comments-content {
  font-size: 28rpx;
  margin-left: 15%;
  margin-top: 10rpx;
}
