.container {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.motto {
  margin-top: 200rpx;
  color: #9f4311;
  font: 32rpx/1.5 "Helvetica Neue",
          Helvetica,
          Arial,
          "Microsoft Yahei",
          "Hiragino Sans GB",
          "Heiti SC",
          "WenQuanYi Micro Hei",
          sans-serif;
}

.fonttest {
  font-size: 32rpx;
  font-weight: bold;
  font-family: Helvetica,
                 Tahoma,
                 Arial,
                 "PingFang SC",
                 "Hiragino Sans GB",
                 "Heiti SC",
                 STXihei,
                 "Microsoft YaHei",
                 SimHei,
                 "WenQuanYi Micro Hei";
}

.forward {
  margin-top: 100rpx;
  font-size: 30rpx;
}

.journey-container {
  margin-top: 200rpx;
  border: 1px solid #ea5a3c;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
}

.journey {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #ea5a3c;
}

page {
  background-color: #ecc0a8;
}
